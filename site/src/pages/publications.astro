---
import Layout from '../layouts/Layout.astro';
import { PublicationsPage } from '../components/publications/PublicationsPage';
import { getCollection } from 'astro:content';
import { researchAreaNames, getResearchAreaDotColor } from '../lib/researchAreaColors';

// Get all publications sorted by year (newest first)
const allPapers = (await getCollection('publications')).sort((a, b) => b.data.year - a.data.year);

// Transform publications data to match React component's expected format
const publications = allPapers.map(paper => ({
  id: paper.id,
  title: paper.data.title,
  authors: paper.data.authors,
  year: paper.data.year,
  journal: paper.data.venue, // Map 'venue' to 'journal'
  doi: paper.data.doi,
  impactFactor: undefined, // Not available in current schema
  researchAreas: [], // Not available in current schema
  featured: paper.data.featured,
  firstAuthor: false, // Not available in current schema
  description: paper.body || undefined,
}));

// Build research areas legend from the color mapping
const researchAreasLegend = Object.entries(researchAreaNames).map(([id, name]) => ({
  id,
  name,
  color: getResearchAreaDotColor(id),
}));
---

<Layout title="Publications" description="Research publications by Dr. John P. Krasting in climate science, sea level rise, ocean dynamics, and Earth system modeling.">
  <div class="max-w-4xl mx-auto px-4 py-12 sm:py-20">
    <div class="mb-12">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">Publications</h1>
      <p class="text-lg text-gray-600">
        Peer-reviewed research publications in climate science, ocean dynamics, and Earth system modeling.
      </p>
    </div>

    <PublicationsPage
      publications={publications}
      researchAreasLegend={researchAreasLegend}
      client:load
    />

    {publications.length === 0 && (
      <p class="text-gray-500 text-center py-12">No publications found.</p>
    )}
  </div>
</Layout>
