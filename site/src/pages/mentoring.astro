---
import Layout from '../layouts/Layout.astro';
import cvData from '../data/cv-data.json';
import { Users, Award, Megaphone } from 'lucide-react';

// Metadata
const pageTitle = "Mentoring";
const pageDescription = "Mentoring postdocs and undergraduates through competitive research programs at NOAA GFDL, Princeton, and Rutgers.";

// Extract mentoring data
const { mentoring, metrics } = cvData;

// Mentoring metrics
const mentoringMetrics = {
  totalPostdocs: mentoring.postdocs.length,
  totalUndergrads: mentoring.undergrads.length,
  publications: 8,
  placedInGradPrograms: 8
};

// Outreach activities
const outreach = [
  {
    title: "NOAA Climate Literacy Ambassador",
    description: "Presenting climate science research to public audiences and policymakers",
    years: "2018-Present"
  },
  {
    title: "Science Fair Judge",
    description: "Regional and state science fair competitions in New Jersey",
    years: "2015-Present"
  },
  {
    title: "Graduate Student Seminar Series",
    description: "Regular presentations to Princeton AOS and Rutgers graduate students on career development",
    years: "2019-Present"
  }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="max-w-7xl mx-auto px-4 py-12 sm:py-20">
    <!-- Page Header -->
    <div class="max-w-3xl mx-auto text-center mb-16">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">Mentoring</h1>
      <p class="text-xl text-gray-600">
        Developing the next generation of climate scientists through hands-on research mentorship
      </p>
    </div>

    <!-- Mentoring Philosophy -->
    <section class="mb-16">
      <div class="bg-white rounded-xl border border-gray-200 p-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Mentoring Philosophy</h2>
        <p class="text-gray-700 leading-relaxed">
          I strive to provide all my students and mentees with the tools and skills that will enable them to have flourishing careers and achieve a greater return on their investment in research and education.
        </p>
      </div>
    </section>

    <!-- Postdoctoral Researchers -->
    <section class="mb-16">
      <div class="flex items-center gap-3 mb-6">
        <Users className="w-6 h-6 text-[var(--rutgers-blue-dark)]" />
        <h2 class="text-3xl font-bold text-gray-900">Postdoctoral Researchers</h2>
      </div>
      <div class="grid md:grid-cols-2 gap-4">
        {mentoring.postdocs.map((postdoc) => (
          <div class="bg-white rounded-xl border border-gray-200 p-6 hover:shadow-md transition-shadow">
            <div class="flex items-start justify-between mb-2">
              <h4 class="text-lg font-semibold text-gray-900">{postdoc.name}</h4>
              {postdoc.current && (
                <span class="px-2 py-1 text-xs font-medium rounded bg-[var(--rutgers-teal-pale)] text-black">Current</span>
              )}
            </div>
            <p class="text-sm text-gray-500 mb-2">{postdoc.institution}</p>
            <p class="text-sm text-gray-700 mb-3">
              <strong>Project:</strong> {postdoc.project}
            </p>
            <div class="flex items-center gap-4 text-sm text-gray-500">
              <span>
                {postdoc.yearsStart}{postdoc.yearsEnd ? `-${postdoc.yearsEnd}` : '-present'}
              </span>
              <span class="text-gray-300">|</span>
            </div>
            {postdoc.fellowship && (
              <div class="mt-3 flex items-center gap-2 text-sm">
                <Award className="w-4 h-4 text-amber-500" />
                <span class="text-amber-700">{postdoc.fellowship}</span>
              </div>
            )}
          </div>
        ))}
      </div>
    </section>

    <!-- Undergraduate Researchers -->
    <section class="mb-16">
      <div class="flex items-center gap-3 mb-6">
        <Users className="w-6 h-6 text-[var(--rutgers-blue-dark)]" />
        <h2 class="text-3xl font-bold text-gray-900">Undergraduate Researchers</h2>
      </div>
      <div class="space-y-4">
        {mentoring.undergrads.map((student) => (
          <div class="bg-white rounded-xl border border-gray-200 p-6 hover:shadow-md transition-shadow">
            <div class="flex items-start justify-between mb-2">
              <h4 class="text-lg font-semibold text-gray-900">{student.name}</h4>
              <span class="px-2 py-1 text-xs font-medium rounded bg-gray-100 text-gray-600">{student.year}</span>
            </div>
            <p class="text-sm text-gray-500 mb-2">{student.institution}</p>
            <p class="text-sm text-[var(--rutgers-blue-dark)] mb-2">{student.program}</p>
            <p class="text-sm text-gray-700">{student.project}</p>
            {student.honorsThesisCommittee && (
              <div class="mt-3 text-sm font-medium text-purple-600">
                Served on honors thesis committee
              </div>
            )}
          </div>
        ))}
      </div>
    </section>
  </div>
</Layout>
