---
import '../styles/global.css';
import Header from '../components/Header.astro';
import { SITE } from '../config';
import { ui, defaultLang } from '../i18n/ui';

interface Props {
  title?: string;
  description?: string;
}

const { title, description = SITE.description } = Astro.props;
const pageTitle = title ? `${title} | ${SITE.labName}` : `${SITE.labName} - ${SITE.university}`;

// Canonical URL - ensure www version
const canonicalURL = new URL(Astro.url.pathname, SITE.website);

// Define dynamic OG Image
// If it's the homepage, use index.png. Otherwise, try to map the path to a slug.
// For simplification, we'll just default to index.png for the home page, and generate specific ones for known routes.
// However, to be robust, let's assume we have an og image for every page that maps to our static paths in og/[...slug].ts.
// But standard pages like /research match /og/research.
// What about nested pages like /research/cv? Our OG generator doesn't handle them yet (it only has static pages list).
// So we will use a fallback.
const currentPath = Astro.url.pathname.replace(/^\/|\/$/g, '');
const ogSlug = currentPath === '' ? 'index' : currentPath;
// Check if the current path is one of our supported OG pages (index, research, team, publications, news, join).
// If not, fallback to index.
const supportedOgPages = ['index', 'research', 'team', 'publications', 'news', 'join'];
const finalOgSlug = supportedOgPages.includes(ogSlug) ? ogSlug : 'index';
const ogImage = new URL(`/og/${finalOgSlug}.png`, Astro.url);

// Enhanced Person Schema for homepage (with NJ positioning)
const personSchema = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Dr. John P. Krasting",
  "givenName": "John",
  "familyName": "Krasting",
  "honorificPrefix": "Dr.",
  "url": SITE.website,
  "image": new URL(SITE.avatar || SITE.logo, SITE.website).href,
  "sameAs": [
    "https://orcid.org/0000-0002-7344-9293",
    "https://scholar.google.com/citations?user=u8yBuncAAAAJ",
    "https://github.com/jkrasting"
  ],
  "jobTitle": "Physical Scientist",
  "description": "Climate scientist specializing in sea level rise, ocean dynamics, and Earth system modeling. Expert in regional climate impacts for the Mid-Atlantic and New Jersey.",
  "worksFor": [
    {
      "@type": "GovernmentOrganization",
      "name": "NOAA Geophysical Fluid Dynamics Laboratory",
      "url": "https://www.gfdl.noaa.gov/",
      "parentOrganization": {
        "@type": "GovernmentOrganization",
        "name": "National Oceanic and Atmospheric Administration",
        "url": "https://www.noaa.gov/"
      }
    }
  ],
  "affiliation": [
    {
      "@type": "EducationalOrganization",
      "name": "Princeton University",
      "url": "https://www.princeton.edu/"
    },
    {
      "@type": "EducationalOrganization",
      "name": "Rutgers, The State University of New Jersey",
      "url": "https://www.rutgers.edu/"
    }
  ],
  "workLocation": {
    "@type": "Place",
    "name": "NOAA Geophysical Fluid Dynamics Laboratory",
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "Princeton",
      "addressRegion": "NJ",
      "addressCountry": "US"
    }
  },
  "areaServed": [
    {
      "@type": "State",
      "name": "New Jersey"
    },
    {
      "@type": "AdministrativeArea",
      "name": "Mid-Atlantic United States"
    }
  ],
  "knowsAbout": [
    "climate science",
    "sea level rise",
    "ocean dynamics",
    "Earth system modeling",
    "climate change impacts",
    "New Jersey climate",
    "Mid-Atlantic climate patterns",
    "regional climate modeling",
    "coastal flooding",
    "carbon cycle"
  ],
  "alumniOf": [
    {
      "@type": "EducationalOrganization",
      "name": "University of Delaware",
      "url": "https://www.udel.edu/"
    }
  ],
  "hasCredential": [
    {
      "@type": "EducationalOccupationalCredential",
      "credentialCategory": "degree",
      "educationalLevel": "Ph.D.",
      "about": "Physical Ocean Science and Engineering"
    }
  ]
};

// WebSite Schema with SearchAction
const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "Dr. John P. Krasting - Climate Scientist",
  "url": SITE.website,
  "description": SITE.description,
  "author": {
    "@type": "Person",
    "name": "Dr. John P. Krasting"
  },
  "potentialAction": {
    "@type": "SearchAction",
    "target": {
      "@type": "EntryPoint",
      "urlTemplate": `${SITE.website}search?q={search_term_string}`
    },
    "query-input": "required name=search_term_string"
  }
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="Content-Security-Policy" content="default-src 'self'; script-src 'self' 'unsafe-inline' 'wasm-unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self';" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Primary Meta Tags -->
    <title>{pageTitle}</title>
    <meta name="description" content={description} />
    <meta name="author" content="Dr. John P. Krasting" />
    <meta name="theme-color" content="#1e3a5f" />
    <meta name="keywords" content="John Krasting, climate scientist, NOAA GFDL, sea level rise, ocean dynamics, Earth system modeling, climate change, New Jersey climate, NJ climate science, Mid-Atlantic climate, Princeton, Rutgers University, regional climate modeling, coastal flooding, state climatology" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:site_name" content="Dr. John P. Krasting" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={pageTitle} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={ogImage} />

    <!-- Structured Data: WebSite Schema (all pages) -->
    <script is:inline type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />

    <!-- Structured Data: Person Schema (homepage only) -->
    {
      Astro.url.pathname === '/' && (
        <script is:inline type="application/ld+json" set:html={JSON.stringify(personSchema)} />
      )
    }
  </head>
  <body class="min-h-screen flex flex-col">
    <Header />
    <main class="flex-grow" data-pagefind-body>
      <slot />
    </main>
    
    <footer class="border-t border-gray-100 py-8 mt-12 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 text-center text-gray-500 text-sm">
        <p>
          <a href="https://github.com/fjd2004711/scholar-lite" target="_blank" class="hover:text-gray-700 inline-flex items-center gap-1 transition-colors">
            Built with Scholar-Lite Open Source Template
          </a>
        </p>
      </div>
    </footer>

    <script is:inline define:vars={{ ui, defaultLang }}>
      // Make ui available globally for debugging if needed, but main logic is here
      const translations = ui;
      const fallbackLang = defaultLang;

      function getStoredLang() {
        if (typeof localStorage !== 'undefined') {
          return localStorage.getItem('preferred-lang') || fallbackLang;
        }
        return fallbackLang;
      }

      // Expose global setLanguage function
      window.setLanguage = (lang) => {
        localStorage.setItem('preferred-lang', lang);
        document.documentElement.lang = lang;
        
        // Update all elements with data-i18n-key
        const elements = document.querySelectorAll('[data-i18n-key]');
        elements.forEach(el => {
          const key = el.getAttribute('data-i18n-key');
          if (key && translations[lang] && translations[lang][key]) {
            // Check if it's an input/textarea with placeholder
            if (el.tagName === 'INPUT' || el.tagName === 'TEXTAREA') {
              el.placeholder = translations[lang][key];
            } else {
              el.textContent = translations[lang][key];
            }
          }
        });

        // Dispatch event for other components (like Header)
        window.dispatchEvent(new CustomEvent('language-change', { detail: { lang } }));
      };

      // Initialize
      const currentLang = getStoredLang();
      // Run immediately to avoid flash
      window.setLanguage(currentLang);
    </script>
  </body>
</html>
