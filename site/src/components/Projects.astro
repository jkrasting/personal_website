---
/*
  Research publications for scrolling display
*/

const recentPublications = [
  {
    journal: "Nature Climate Change (2023)",
    title: "Multimodel regional climate projections",
  },
  {
    journal: "Nature Geoscience (2024)",
    title: "Ocean carbon cycle dynamics",
  },
  {
    journal: "PNAS (2022)",
    title: "Global sea level change mechanisms",
  },
  {
    journal: "JGR Oceans (2023)",
    title: "AMOC stability analysis",
  },
  {
    journal: "Journal of Climate (2024)",
    title: "Antarctic ice sheet interactions",
  },
];

import Image from "astro/components/Image.astro";
---

<section
  class="relative overflow-hidden bg-foreground w-full max-w-screen-2xl text-center flex flex-col justify-center items-center gap-10 px-4 py-24 sm:py-24 select-none"
>
  <h2
    class="z-10 w-full max-w-xl sm:text-center text-lg sm:text-2xl md:text-4xl font-medium tracking-tighter text-pretty bg-clip-text text-transparent bg-gradient-to-b from-background via-background to-muted-foreground"
  >
    Research at a Glance
  </h2>
  <p
    class="w-full max-w-xl bg-clip-text text-transparent bg-gradient-to-b from-background via-background to-muted-foreground sm:text-center text-normal sm:text-lg md:text-xl font-light tracking-tighter text-balance"
  >
    Advancing climate science through modeling and observation
  </p>
  <div class="z-10 w-full grid grid-cols-1 md:grid-cols-5 grid-rows-6 gap-2">
    <article
      class="overflow-hidden relative bg-dark-card col-span-1 md:col-span-3 md:row-span-2 border h-[300px] border-dark-border rounded-[1rem] flex flex-col lg:flex-row lg:gap-3"
    >
      <div class="flex flex-col gap-2 w-full items-start p-4 tetx-left">
        <span class="text-xs text-muted-foreground uppercase tracking-wider">Featured Research</span>
        <h3
          class="text-left sm:text-xl md:text-2xl font-medium tracking-tighter text-pretty bg-clip-text text-transparent bg-gradient-to-br from-background via-background to-secondary"
        >
          Sea Level Rise Projections
        </h3>
        <p
          class="w-full text-muted-foreground text-left text-sm sm:text-normal md:text-lg font-light tracking-tighter text-balance"
        >
          Leading research on global and regional sea level changes, informing coastal planning and policy.
        </p>
      </div>
      <div class="aspect-video">
        <Image
          src="/assets/mockup1.png"
          alt="Sea Level Rise Research"
          loading="lazy"
          width={1920}
          height={1080}
          class="object-contain w-full h-full rounded-md"
        />
      </div>
    </article>
    <article
      class="overflow-hidden group bg-dark-card col-span-1 md:col-span-2 md:row-span-2 md:col-start-4 h-[300px] border border-dark-border rounded-[1rem] p-4 flex flex-col flex-1 gap-2 justify-center items-center"
    >
      <div
        class="w-fit rounded-full bg-background px-4 py-2 flex justify-center items-center rotate-12 group-hover:rotate-0 border transition-all duration-300 ease-in-out"
      >
        <span
          class="text-normal sm:text-lg md:text-xl font-light tracking-tighter"
        >
          Sea Level Rise
        </span>
      </div>
      <div
        class="w-fit rounded-full bg-background px-4 py-2 flex justify-center items-center -rotate-6 group-hover:rotate-0 border transition-all duration-300 ease-in-out"
      >
        <span
          class="text-normal sm:text-lg md:text-xl font-light tracking-tighter"
        >
          Ocean Dynamics
        </span>
      </div>
      <div
        class="w-fit rounded-full bg-background px-4 py-2 flex justify-center items-center border"
      >
        <span
          class="text-normal sm:text-lg md:text-xl font-light tracking-tighter"
        >
          Carbon Cycle
        </span>
      </div>
      <div
        class="w-fit rounded-full bg-background px-4 py-2 flex justify-center items-center border rotate-12 group-hover:rotate-0 transition-all duration-300 ease-in-out"
      >
        <span
          class="text-normal sm:text-lg md:text-xl font-light tracking-tighter"
        >
          ESM Development
        </span>
      </div>
      <div
        class="w-fit rounded-full bg-background px-4 py-2 flex justify-center items-center border -rotate-3 group-hover:rotate-0 transition-all duration-300 ease-in-out"
      >
        <span
          class="text-normal sm:text-lg md:text-xl font-light tracking-tighter"
        >
          Model Diagnostics
        </span>
      </div>
    </article>
    <article
      class="overflow-hidden bg-dark-card col-span-1 md:col-span-2 md:row-span-2 md:row-start-3 border h-[300px] border-dark-border rounded-[1rem] px-4 group"
    >
      <div class="py-4">
        <span class="text-xs text-muted-foreground uppercase tracking-wider">Recent Publications</span>
      </div>
      <div
        class="w-full h-fit max-h-[500px] flex flex-col justify-center select-none overflow-hidden"
      >
        <div
          class="w-full h-max flex flex-col justify-center items-center gap-[4rem] animate-vertical-slide"
        >
          {
            recentPublications.concat(recentPublications).map((pub) => (
              <article class="w-full max-w-sm flex flex-col gap-2 items-center justify-center size-20 border border-dark-border bg-background rounded-[1rem] px-4 py-2">
                <div class="w-full flex items-center justify-start gap-2">
                  <span class="w-7 h-7 rounded-full bg-gradient-to-r from-primary to-secondary" />
                  <h1 class="text-sm font-medium">{pub.journal}</h1>
                </div>
                <p class="w-full text-left text-muted-foreground text-xs">
                  {pub.title}
                </p>
              </article>
            ))
          }
        </div>
      </div>
    </article>
    <article
      class="overflow-hidden bg-dark-card col-span-1 md:col-span-3 md:row-span-2 md:col-start-3 md:row-start-3 border h-[300px] border-dark-border rounded-[1rem] flex flex-col justify-center items-center p-6"
    >
      <span class="text-xs text-muted-foreground uppercase tracking-wider mb-4">Impact & Recognition</span>
      <h3
        class="text-center sm:text-xl md:text-2xl font-medium tracking-tighter text-pretty bg-clip-text text-transparent bg-gradient-to-br from-background via-background to-secondary mb-6"
      >
        Research Impact
      </h3>
      <div class="flex flex-wrap justify-center items-center gap-8">
        <div class="flex flex-col items-center">
          <span class="text-3xl md:text-4xl font-bold text-background">44</span>
          <span class="text-sm text-muted-foreground">Publications</span>
        </div>
        <div class="flex flex-col items-center">
          <span class="text-3xl md:text-4xl font-bold text-background">h-31</span>
          <span class="text-sm text-muted-foreground">Index</span>
        </div>
        <div class="flex flex-col items-center">
          <span class="text-3xl md:text-4xl font-bold text-background">$8.75M</span>
          <span class="text-sm text-muted-foreground">Research Funding</span>
        </div>
      </div>
    </article>
    <article
      class="overflow-hidden bg-dark-card col-span-1 md:col-span-3 md:row-span-2 md:row-start-5 border h-[300px] border-dark-border rounded-[1rem] flex flex-col lg:flex-row lg:gap-3"
    >
      <div class="flex flex-col gap-2 w-full items-start p-4 tetx-left">
        <span class="text-xs text-muted-foreground uppercase tracking-wider">Research Area</span>
        <h3
          class="text-left sm:text-xl md:text-2xl font-medium tracking-tighter text-pretty bg-clip-text text-transparent bg-gradient-to-br from-background via-background to-secondary"
        >
          Earth System Modeling
        </h3>
        <p
          class="w-full text-muted-foreground text-left text-sm sm:text-normal md:text-lg font-light tracking-tighter text-balance"
        >
          Core developer of GFDL CM4, ESM4, and OM5 climate models used in IPCC assessments.
        </p>
      </div>
      <div class="aspect-video">
        <Image
          src="/assets/mockup3.png"
          alt="Earth System Modeling"
          loading="lazy"
          width={1920}
          height={1080}
          class="object-contain w-full h-full rounded-md"
        />
      </div>
    </article>
    <article
      class="overflow-hidden bg-dark-card col-span-1 md:col-span-2 md:row-span-2 md:col-start-4 md:row-start-5 border h-[300px] border-dark-border rounded-[1rem]"
    >
      <div
        class="w-full h-full flex flex-col gap-5 justify-center items-center"
      >
        <h1
          class="sm:text-xl md:text-2xl font-medium tracking-tighter text-pretty bg-clip-text text-transparent bg-gradient-to-br from-background via-background to-secondary"
        >
          Explore Research
        </h1>
        <a
          href="/publications"
          class="w-fit flex gap-2 justify-center items-center px-4 py-2 sm:text-lg font-medium text-background bg-primary rounded-full"
        >
          View All Publications
          <svg
            width="15"
            height="15"
            viewBox="0 0 15 15"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
            class="size-5"
            ><path
              d="M8.14645 3.14645C8.34171 2.95118 8.65829 2.95118 8.85355 3.14645L12.8536 7.14645C13.0488 7.34171 13.0488 7.65829 12.8536 7.85355L8.85355 11.8536C8.65829 12.0488 8.34171 12.0488 8.14645 11.8536C7.95118 11.6583 7.95118 11.3417 8.14645 11.1464L11.2929 8H2.5C2.22386 8 2 7.77614 2 7.5C2 7.22386 2.22386 7 2.5 7H11.2929L8.14645 3.85355C7.95118 3.65829 7.95118 3.34171 8.14645 3.14645Z"
              fill="currentColor"
              fill-rule="evenodd"
              clip-rule="evenodd"></path></svg
          >
        </a>
      </div>
    </article>
  </div>
  <div
    class="bg-white opacity-10 absolute size-80 top-[-160px] border blur-[150px] rounded-full"
  >
  </div>
</section>

<style>
  .group:hover .animate-vertical-slide {
    animation-play-state: paused;
  }
</style>
