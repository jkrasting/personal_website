---
// Session-based authentication component
// Uses sessionStorage - clears when browser closes
// Prompts once per session, works on any entry point
---

<div id="auth-overlay" class="auth-overlay" style="display: none;">
  <div class="auth-modal">
    <h2>Preview Access</h2>
    <p>This site is in preview mode. Please enter the password to continue.</p>
    <form id="auth-form">
      <input
        type="password"
        id="auth-password"
        placeholder="Enter password"
        autocomplete="off"
        required
      />
      <button type="submit">Access Site</button>
    </form>
    <p id="auth-error" class="error" style="display: none;">Incorrect password. Please try again.</p>
  </div>
</div>

<script>
  // Configuration - change this password as needed
  const CORRECT_PASSWORD = 'elmer';
  const SESSION_KEY = 'site_authenticated';

  // Check authentication status on page load
  function checkAuth() {
    const isAuthenticated = sessionStorage.getItem(SESSION_KEY);

    if (!isAuthenticated) {
      // Not authenticated - show overlay
      showAuthOverlay();
    } else {
      // Already authenticated - hide overlay and show content
      hideAuthOverlay();
    }
  }

  function showAuthOverlay() {
    const overlay = document.getElementById('auth-overlay');
    const body = document.body;

    if (overlay) {
      overlay.style.display = 'flex';
      body.style.overflow = 'hidden'; // Prevent scrolling

      // Focus password field
      const passwordField = document.getElementById('auth-password') as HTMLInputElement;
      if (passwordField) {
        setTimeout(() => passwordField.focus(), 100);
      }
    }
  }

  function hideAuthOverlay() {
    const overlay = document.getElementById('auth-overlay');
    const body = document.body;

    if (overlay) {
      overlay.style.display = 'none';
      body.style.overflow = ''; // Restore scrolling
    }
  }

  function handleAuth(event: Event) {
    event.preventDefault();

    const passwordField = document.getElementById('auth-password') as HTMLInputElement;
    const errorMsg = document.getElementById('auth-error');

    if (!passwordField || !errorMsg) return;

    const enteredPassword = passwordField.value;

    if (enteredPassword === CORRECT_PASSWORD) {
      // Correct password - set session flag and hide overlay
      sessionStorage.setItem(SESSION_KEY, 'true');
      hideAuthOverlay();
      errorMsg.style.display = 'none';
      passwordField.value = '';
    } else {
      // Incorrect password - show error
      errorMsg.style.display = 'block';
      passwordField.value = '';
      passwordField.focus();
    }
  }

  // Initialize on page load
  document.addEventListener('DOMContentLoaded', () => {
    checkAuth();

    // Attach form handler
    const form = document.getElementById('auth-form');
    if (form) {
      form.addEventListener('submit', handleAuth);
    }
  });

  // Also check immediately (in case DOM is already loaded)
  if (document.readyState === 'loading') {
    // DOMContentLoaded will fire
  } else {
    // DOM already loaded
    checkAuth();
  }
</script>

<style>
  .auth-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.9);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9999;
    backdrop-filter: blur(8px);
  }

  .auth-modal {
    background: white;
    padding: 2rem;
    border-radius: 0.5rem;
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1),
                0 10px 10px -5px rgba(0, 0, 0, 0.04);
    max-width: 400px;
    width: 90%;
    text-align: center;
  }

  .auth-modal h2 {
    margin-top: 0;
    margin-bottom: 0.5rem;
    color: #111;
    font-size: 1.5rem;
    font-weight: 600;
  }

  .auth-modal p {
    color: #666;
    margin-bottom: 1.5rem;
    line-height: 1.5;
  }

  #auth-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  #auth-password {
    padding: 0.75rem;
    border: 2px solid #e5e7eb;
    border-radius: 0.375rem;
    font-size: 1rem;
    transition: border-color 0.2s;
    font-family: inherit;
  }

  #auth-password:focus {
    outline: none;
    border-color: oklch(var(--primary));
  }

  #auth-form button {
    padding: 0.75rem 1.5rem;
    background: oklch(var(--primary));
    color: white;
    border: none;
    border-radius: 0.375rem;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: opacity 0.2s;
    font-family: inherit;
  }

  #auth-form button:hover {
    opacity: 0.9;
  }

  #auth-form button:active {
    opacity: 0.8;
  }

  .error {
    color: #dc2626;
    font-size: 0.875rem;
    margin-top: 0.5rem;
    margin-bottom: 0;
  }
</style>
